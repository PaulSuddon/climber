<!DOCTYPE html>
<html>
  <head>
    <title>Climber</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <style>
      body { font-family: 'Inter', system-ui, sans-serif; }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
          <i class="bi bi-mountain me-2"></i>
          Climber
        <% end %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <%= link_to trips_path, class: "nav-link d-flex align-items-center" do %>
                <i class="bi bi-car-front me-1"></i> Trips
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destinations_path, class: "nav-link d-flex align-items-center" do %>
                <i class="bi bi-geo-alt me-1"></i> Destinations
              <% end %>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to new_trip_path, class: "nav-link d-flex align-items-center" do %>
                  <i class="bi bi-plus-circle me-1"></i> Offer a Ride
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to dashboard_path, class: "nav-link d-flex align-items-center" do %>
                  <i class="bi bi-speedometer2 me-1"></i> Dashboard
                <% end %>
              </li>
            <% end %>
          </ul>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <span class="nav-link d-flex align-items-center">
                  <i class="bi bi-person-circle me-1"></i> <%= current_user.name %>
                </span>
              </li>
              <li class="nav-item">
                <%= link_to edit_user_registration_path, class: "nav-link d-flex align-items-center" do %>
                  <i class="bi bi-gear me-1"></i> Settings
                <% end %>
              </li>
              <li class="nav-item">
                <%= button_to destroy_user_session_path, method: :delete, class: "nav-link btn btn-link d-flex align-items-center" do %>
                  <i class="bi bi-box-arrow-right me-1"></i> Sign Out
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: "nav-link d-flex align-items-center" do %>
                  <i class="bi bi-box-arrow-in-right me-1"></i> Sign In
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: "nav-link d-flex align-items-center" do %>
                  <i class="bi bi-person-plus me-1"></i> Sign Up
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container py-4">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
          <i class="bi bi-check-circle-fill me-2"></i>
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
          <i class="bi bi-exclamation-triangle-fill me-2"></i>
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <footer class="py-4 mt-5">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
            <div class="d-flex align-items-center justify-content-center justify-content-md-start">
              <i class="bi bi-mountain me-2" style="font-size: 1.5rem;"></i>
              <span class="fw-bold">Climber</span>
            </div>
            <p class="mb-0 mt-2 small">Connecting climbers and hikers since 2024</p>
          </div>
          <div class="col-md-6 text-center text-md-end">
            <div class="d-flex gap-3 justify-content-center justify-content-md-end">
              <a href="#" class="text-white"><i class="bi bi-instagram" style="font-size: 1.25rem;"></i></a>
              <a href="#" class="text-white"><i class="bi bi-twitter-x" style="font-size: 1.25rem;"></i></a>
              <a href="#" class="text-white"><i class="bi bi-facebook" style="font-size: 1.25rem;"></i></a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
