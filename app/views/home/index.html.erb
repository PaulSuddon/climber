<!-- Hero Section -->
<div class="hero-section text-white mb-5">
  <div class="hero-content text-center">
    <h1 class="display-4 mb-3">
      <i class="bi bi-mountain"></i> Climber
    </h1>
    <p class="lead mb-4">Share rides to the best climbing and hiking spots</p>
    <p class="mb-4">Join our community of outdoor enthusiasts. Save money, make friends, and reduce your carbon footprint.</p>
    <div class="d-flex gap-3 justify-content-center flex-wrap">
      <%= link_to trips_path, class: "btn btn-light btn-lg px-4" do %>
        <i class="bi bi-search me-2"></i>Find a Ride
      <% end %>
      <% if user_signed_in? %>
        <%= link_to new_trip_path, class: "btn btn-outline-light btn-lg px-4" do %>
          <i class="bi bi-car-front me-2"></i>Offer a Ride
        <% end %>
      <% else %>
        <%= link_to new_user_registration_path, class: "btn btn-outline-light btn-lg px-4" do %>
          <i class="bi bi-person-plus me-2"></i>Join Now
        <% end %>
      <% end %>
    </div>
  </div>
</div>

