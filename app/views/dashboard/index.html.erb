<div class="mb-4">
  <h1 class="fw-bold">
    <i class="bi bi-speedometer2 text-primary me-2"></i>My Dashboard
  </h1>
  <p class="text-muted">Welcome back, <%= current_user.name %>!</p>
</div>

<% if @pending_requests.any? %>
<!-- Pending Booking Requests -->
<div class="card mb-4 border-warning">
  <div class="card-header bg-warning bg-opacity-10 d-flex align-items-center">
    <i class="bi bi-exclamation-circle text-warning me-2"></i>
    <h5 class="mb-0">Pending Booking Requests (<%= @pending_requests.count %>)</h5>
  </div>
  <div class="table-responsive">
    <table class="table table-hover mb-0 align-middle">
      <tbody>
        <% @pending_requests.each do |booking| %>
          <tr>
            <td style="width: 50px;">
              <% if booking.user.avatar.attached? %>
                <%= image_tag booking.user.avatar, class: "rounded-circle", style: "width: 40px; height: 40px; object-fit: cover;" %>
              <% else %>
                <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                  <i class="bi bi-person-fill text-white"></i>
                </div>
              <% end %>
            </td>
            <td><strong><%= link_to booking.user.name, profile_path(booking.user), class: "text-decoration-none" %></strong></td>
            <td><i class="bi bi-geo-alt text-muted me-1"></i><%= booking.trip.display_name %></td>
            <td><i class="bi bi-calendar3 text-muted me-1"></i><%= booking.trip.departure_date.strftime("%b %d") %></td>
            <td><span class="badge bg-primary"><%= booking.seats_booked %> seat(s)</span></td>
            <td class="text-end" style="white-space: nowrap;">
              <%= button_to confirm_trip_booking_path(booking.trip, booking), method: :post, class: "btn btn-success btn-sm me-1" do %>
                <i class="bi bi-check"></i> Confirm
              <% end %>
              <%= button_to reject_trip_booking_path(booking.trip, booking), method: :post, class: "btn btn-outline-danger btn-sm", style: "display: inline-block;" do %>
                <i class="bi bi-x"></i> Reject
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>

<!-- Quick Actions -->
<div class="row row-cols-6 g-3 mb-5">
  <div class="col">
    <%= link_to new_trip_path, class: "quick-action h-100" do %>
      <div class="action-icon bg-primary bg-opacity-10 mx-auto">
        <i class="bi bi-plus-circle text-primary"></i>
      </div>
      <span class="action-label">Offer a Ride</span>
    <% end %>
  </div>
  <div class="col">
    <%= link_to trips_path, class: "quick-action h-100" do %>
      <div class="action-icon bg-success bg-opacity-10 mx-auto">
        <i class="bi bi-search text-success"></i>
      </div>
      <span class="action-label">Find a Trip</span>
    <% end %>
  </div>
  <div class="col">
    <%= link_to destinations_path, class: "quick-action h-100" do %>
      <div class="action-icon bg-warning bg-opacity-10 mx-auto">
        <i class="bi bi-geo-alt text-warning"></i>
      </div>
      <span class="action-label">Destinations</span>
    <% end %>
  </div>
  <div class="col">
    <%= link_to conversations_path, class: "quick-action h-100" do %>
      <div class="action-icon bg-info bg-opacity-10 position-relative mx-auto">
        <i class="bi bi-chat-dots text-info"></i>
        <% if current_user.unread_messages_count > 0 %>
          <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            <%= current_user.unread_messages_count %>
          </span>
        <% end %>
      </div>
      <span class="action-label">Messages</span>
    <% end %>
  </div>
  <div class="col">
    <%= link_to notifications_path, class: "quick-action h-100" do %>
      <div class="action-icon bg-danger bg-opacity-10 position-relative mx-auto">
        <i class="bi bi-bell text-danger"></i>
        <% if current_user.unread_notifications_count > 0 %>
          <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            <%= current_user.unread_notifications_count %>
          </span>
        <% end %>
      </div>
      <span class="action-label">Notifications</span>
    <% end %>
  </div>
  <div class="col">
    <%= link_to profile_path(current_user), class: "quick-action h-100" do %>
      <div class="action-icon bg-secondary bg-opacity-10 mx-auto">
        <i class="bi bi-person text-secondary"></i>
      </div>
      <span class="action-label">My Profile</span>
    <% end %>
  </div>
</div>

<div class="row g-4">
  <!-- My Trips as Driver -->
  <div class="col-lg-6">
    <div class="card h-100">
      <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <i class="bi bi-car-front me-2 text-primary"></i>
          <h5 class="mb-0">My Trips (as Driver)</h5>
        </div>
        <%= link_to new_trip_path, class: "btn btn-sm btn-primary" do %>
          <i class="bi bi-plus"></i>
        <% end %>
      </div>
      <% if @my_trips.any? %>
        <ul class="list-group list-group-flush">
          <% @my_trips.first(5).each do |trip| %>
            <li class="list-group-item">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="me-3">
                    <div class="rounded <%= trip.climbing? ? 'bg-warning' : 'bg-success' %> bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                      <i class="bi <%= trip.climbing? ? 'bi-signpost-split text-warning' : 'bi-tree text-success' %>"></i>
                    </div>
                  </div>
                  <div>
                    <strong><%= trip.display_name %></strong>
                    <br>
                    <small class="text-muted">
                      <i class="bi bi-calendar3 me-1"></i><%= trip.departure_date.strftime("%b %d") %>
                      <i class="bi bi-clock ms-2 me-1"></i><%= trip.departure_date.strftime("%H:%M") %>
                    </small>
                    <br>
                    <span class="badge bg-<%= trip.open? ? 'success' : (trip.full? ? 'warning' : 'secondary') %> me-1">
                      <%= trip.status.capitalize %>
                    </span>
                    <span class="badge bg-light text-dark">
                      <i class="bi bi-people me-1"></i><%= trip.bookings.confirmed.sum(:seats_booked) %>/<%= trip.available_seats %>
                    </span>
                  </div>
                </div>
                <div class="d-flex gap-1">
                  <%= link_to trip, class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= link_to edit_trip_path(trip), class: "btn btn-sm btn-outline-secondary" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
        <% if @my_trips.count > 5 %>
          <div class="card-footer text-center">
            <small class="text-muted">Showing 5 of <%= @my_trips.count %> trips</small>
          </div>
        <% end %>
      <% else %>
        <div class="card-body text-center py-5">
          <i class="bi bi-car-front text-muted" style="font-size: 3rem;"></i>
          <h5 class="mt-3">No Trips Yet</h5>
          <p class="text-muted mb-3">You haven't offered any rides yet.</p>
          <%= link_to new_trip_path, class: "btn btn-primary" do %>
            <i class="bi bi-plus-circle me-1"></i> Offer Your First Ride
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- My Bookings as Passenger -->
  <div class="col-lg-6">
    <div class="card h-100">
      <div class="card-header d-flex align-items-center">
        <i class="bi bi-ticket-perforated me-2 text-info"></i>
        <h5 class="mb-0">My Bookings (as Passenger)</h5>
      </div>
      <% if @my_bookings.any? %>
        <ul class="list-group list-group-flush">
          <% @my_bookings.first(5).each do |booking| %>
            <li class="list-group-item">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="me-3">
                    <div class="rounded <%= booking.trip.climbing? ? 'bg-warning' : 'bg-success' %> bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                      <i class="bi <%= booking.trip.climbing? ? 'bi-signpost-split text-warning' : 'bi-tree text-success' %>"></i>
                    </div>
                  </div>
                  <div>
                    <strong><%= booking.trip.display_name %></strong>
                    <br>
                    <small class="text-muted">
                      <i class="bi bi-calendar3 me-1"></i><%= booking.trip.departure_date.strftime("%b %d") %>
                      <i class="bi bi-person ms-2 me-1"></i><%= booking.trip.driver.name %>
                    </small>
                    <br>
                    <span class="badge bg-<%= booking.confirmed? ? 'success' : (booking.pending? ? 'warning' : 'secondary') %> me-1">
                      <%= booking.status.capitalize %>
                    </span>
                    <span class="badge bg-primary">
                      <%= booking.seats_booked %> seat(s)
                    </span>
                  </div>
                </div>
                <div class="d-flex gap-1">
                  <%= link_to booking.trip, class: "btn btn-sm btn-outline-info" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= button_to conversations_path(recipient_id: booking.trip.driver.id), method: :post, class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-chat-dots"></i>
                  <% end %>
                  <% if booking.confirmed? && booking.trip.departure_date > Time.current %>
                    <%= button_to trip_booking_path(booking.trip, booking), method: :delete, class: "btn btn-sm btn-outline-danger", data: { confirm: "Are you sure?" } do %>
                      <i class="bi bi-x"></i>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
        <% if @my_bookings.count > 5 %>
          <div class="card-footer text-center">
            <small class="text-muted">Showing 5 of <%= @my_bookings.count %> bookings</small>
          </div>
        <% end %>
      <% else %>
        <div class="card-body text-center py-5">
          <i class="bi bi-ticket-perforated text-muted" style="font-size: 3rem;"></i>
          <h5 class="mt-3">No Bookings Yet</h5>
          <p class="text-muted mb-3">You haven't booked any trips yet.</p>
          <%= link_to trips_path, class: "btn btn-info" do %>
            <i class="bi bi-search me-1"></i> Browse Trips
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
