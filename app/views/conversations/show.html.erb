<nav aria-label="breadcrumb" class="mb-4">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Messages", conversations_path %><i class="bi bi-chevron-right mx-2"></i></li>
    <li class="breadcrumb-item active"><%= @other_user.name %></li>
  </ol>
</nav>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <!-- Chat Header -->
      <div class="card-header d-flex align-items-center">
        <div class="avatar me-3">
          <%= @other_user.name.first.upcase %>
        </div>
        <div>
          <h5 class="mb-0"><%= @other_user.name %></h5>
          <% if @other_user.bio.present? %>
            <small class="text-muted"><%= truncate(@other_user.bio, length: 50) %></small>
          <% end %>
        </div>
      </div>

      <!-- Messages -->
      <div class="card-body" style="height: 400px; overflow-y: auto;" id="messages-container">
        <% if @messages.any? %>
          <% @messages.each do |message| %>
            <% is_mine = message.user == current_user %>
            <div class="d-flex mb-3 <%= 'justify-content-end' if is_mine %>">
              <% unless is_mine %>
                <div class="avatar me-2" style="width: 35px; height: 35px; font-size: 0.85rem;">
                  <%= message.user.name.first.upcase %>
                </div>
              <% end %>
              <div class="<%= is_mine ? 'bg-primary text-white' : 'bg-light' %> rounded p-3" style="max-width: 70%;">
                <p class="mb-1"><%= message.body %></p>
                <small class="<%= is_mine ? 'text-white-50' : 'text-muted' %>">
                  <%= message.created_at.strftime("%b %d, %H:%M") %>
                </small>
              </div>
              <% if is_mine %>
                <div class="avatar ms-2" style="width: 35px; height: 35px; font-size: 0.85rem;">
                  <%= current_user.name.first.upcase %>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-5">
            <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
            <p class="mt-3">No messages yet. Start the conversation!</p>
          </div>
        <% end %>
      </div>

      <!-- Message Input -->
      <div class="card-footer">
        <%= form_with model: [@conversation, @message], local: true, class: "d-flex gap-2" do |f| %>
          <%= f.text_field :body, class: "form-control", placeholder: "Type your message...", autocomplete: "off", autofocus: true %>
          <%= f.submit "Send", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <!-- User Info Card -->
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <i class="bi bi-person-circle me-2 text-primary"></i>
        <h6 class="mb-0">About <%= @other_user.name %></h6>
      </div>
      <div class="card-body">
        <div class="text-center mb-3">
          <div class="avatar mx-auto mb-2" style="width: 60px; height: 60px; font-size: 1.5rem;">
            <%= @other_user.name.first.upcase %>
          </div>
          <h5 class="mb-0"><%= @other_user.name %></h5>
        </div>

        <% if @other_user.bio.present? %>
          <p class="text-muted small"><%= @other_user.bio %></p>
        <% end %>

        <hr>

        <div class="d-flex align-items-center mb-2">
          <i class="bi bi-car-front text-muted me-2"></i>
          <small><strong><%= @other_user.trips.count %></strong> trips offered</small>
        </div>
        <div class="d-flex align-items-center">
          <i class="bi bi-calendar-check text-muted me-2"></i>
          <small>Member since <%= @other_user.created_at.strftime("%B %Y") %></small>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Scroll to bottom of messages on page load
  document.addEventListener('DOMContentLoaded', function() {
    var container = document.getElementById('messages-container');
    if (container) {
      container.scrollTop = container.scrollHeight;
    }
  });
</script>
